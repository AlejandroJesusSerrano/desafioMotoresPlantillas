<h2>Lista de Productos de Asgard Coleccionables</h2>

{{#if listExists}}
<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Universe</th>
                <th>Descripcion</th>
                <th>Cant. Disponible</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody class="container">
            {{#each allProducts}}
            <tr class="text-center">
                <td class="align-middle">{{this.title}}</td>
                <td class="align-middle">{{this.price}}</td>
                <td class="align-middle">{{this.universe}}</td>
                <td class="align-middle">{{this.description}}</td>
                <td class="align-middle">{{this.stock}}</td>
                <td class="align-middle">
                    <img src={{this.thumbnail}} alt={{this.title}}>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}

<a href="../">
    <button>Cargar Productos</button>
</a>


